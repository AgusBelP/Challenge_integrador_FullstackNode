<%- include('../partials/header') %>
<main class="container items__page">
  <section class="items__page-primary">
    <article class="items__page-main">
      <p class="items__page-licence"><%= item.licence_name %></p>
      <h3 class="items__page-title"><%= item.item_name %></h3>
      <p class="items__page-text"><%= item.item_description %></p>
      <h4 class="items__page-price">$<%= item.price %></h4>
      <form action="" method="">
        <button type="button" class="items__page-buttons" id="minus_button">-</button>
        <input type="text" placeholder="0" class="items__page-numitems" id="item_quantity" />
        <button type="button" class="items__page-buttons" id="plus_button">+</button>
        <input class="items__page-cart" type="button" value="Agregar al carrito" />
      </form>
      <p class="items__page-payment"><a href="">Ver métodos de pago</a> - 3 CUOTAS SIN INTERÉS</p>
    </article>
    <picture class="card-item__cover">
      <img
        class="card-item__img--front"
        src="/img/<%= item.licence_file_path %>/<%= item.img_front %>"
        alt="<%= item.description %>" />
      <img
        class="card-item__img--back"
        src="/img/<%= item.licence_file_path %>/<%= item.img_back %>"
        alt="<%= item.description %>" />
    </picture>
  </section>
  <section class="related__products container">
    <h2 class="related__products-title">PRODUCTOS RELACIONADOS</h2>
    <div class="glide">
      <div class="glide__track" data-glide-el="track">
        <ul class="related__products-items glide__slides">
          <% related.forEach(related => { %>
          <li class="shop__item glide__slide">
            <article class="card-item">
              <a class="item-card__link" href="">
                <picture class="card-item__cover">
                  <span class="card-item__tag">Nuevo</span>
                  <img
                    class="card-item__img--front"
                    src="/img/<%= related.licence_file_path %>/<%= related.img_front %>"
                    alt="<%= related.item_description %>" />
                  <img
                    class="card-item__img--back"
                    src="/img/<%= related.licence_file_path %>/<%= related.img_back %>"
                    alt="<%= related.item_description %>" />
                </picture>
                <div class="card-item__content">
                  <p class="card-item__licence"><%= related.licence_name %></p>
                  <h4 class="card-item__name"><%= related.item_name %></h4>
                  <p class="card-item__price">$<%= related.price %>.-</p>
                  <p class="card-item__promo"><%= related.instalment_plan %> CUOTAS SIN INTERÉS</p>
                </div>
              </a>
            </article>
          </li>
          <% }); %>
        </ul>
      </div>
      <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
          <iconify-icon icon="tabler:chevron-left"></iconify-icon>
        </button>
        <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
          <iconify-icon icon="tabler:chevron-right"></iconify-icon>
        </button>
      </div>
    </div>
  </section>
</main>
<%- include('../partials/footer') %>
