<%- include('partials/header') %>
<section class="hero">
  <article class="hero__content container">
    <h3 class="hero__title">Nuevos Ingresos</h3>
    <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
    <a class="hero__link" href="./pages/shop.html">SHOP</a>
  </article>
</section>
<main class="main-container">
  <% collections.forEach(collections => { %>
  <section class="collection container">
    <article class="collection__content <% if (collections.licence_id % 2 == 0){ %> order_1 <% } %>">
      <h3 class="collection__title"><%= collections.licence_title %></h3>
      <p class="collection__text"><%= collections.licence_description %></p>
      <a class="collection__link" href="/shop/shop">VER COLECCIÓN</a>
    </article>
    <picture class="collecton__cover">
      <img src="<%= collections.licence_image %>" alt="<%= collections.licence_description %>" />
    </picture>
  </section>
  <% }) %>
  <section class="slider container">
    <h2 class="slider__title">ÚLTIMOS LANZAMIENTOS</h2>
    <div class="glide">
      <div class="glide__track" data-glide-el="track">
        <ul class="slider__items glide__slides">
          <% random.forEach(random => { %>
          <li class="glide__slide slider__item">
            <article class="card-item">
              <a class="item-card__link" href="">
                <picture class="card-item__cover">
                  <span class="card-item__tag">Nuevo</span>
                  <img
                    class="card-item__img--front"
                    src="<%= random.img_front %>"
                    alt="<%= random.item_description %>" />
                  <img class="card-item__img--back" src="<%= random.img_back %>" alt="<%= random.item_description %>" />
                </picture>
                <div class="card-item__content">
                  <p class="card-item__licence"><%= random.licence_name %></p>
                  <h4 class="card-item__name"><%= random.item_name %></h4>
                  <p class="card-item__price">$ <%= random.price %>.-</p>
                  <p class="card-item__promo"><%= random.instalment_plan %> CUOTAS SIN INTERÉS</p>
                </div>
              </a>
            </article>
          </li>
          <% }) %>
        </ul>
      </div>
      <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
          <iconify-icon icon="tabler:chevron-left"></iconify-icon>
        </button>
        <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
          <iconify-icon icon="line-md:chevron-right"></iconify-icon>
        </button>
      </div>
    </div>
  </section>
</main>
<%- include('partials/footer') %>
