<%- include('../partials/header') %>
<main class="create container">
  <h2 class="create__title">CREAR NUEVO ITEM</h2>
  <form class="form" action="/admin/create" method="POST" enctype="multipart/form-data">
    <div class="form-spacing">
      <label for="categoria" class="form-title">Categoría:</label>
      <select name="categoria" id="categoria" class="form-box1" required>
        <option value="" disabled selected hidden>Seleccionar</option>
        <!-- disabled = grisado, selected = la primera opción que aparece, hidden = para que no aparezca entre las opciones del dropdown -->
        <% categories.forEach( categories => { %>
        <option value="<%= categories.category_id %>"><%= categories.category_name %></option>
        <% })%>
      </select>

      <label for="licencia" class="form-title">Licencia:</label>
      <select name="licencia" id="licencia" class="form-box1" required>
        <option value="" disabled selected hidden>Seleccionar</option>
        <% licences.forEach( licences => { %>
        <option value="<%= licences.licence_id %>"><%= licences.licence_name %></option>
        <% })%>
      </select>
    </div>
    <div>
      <label for="nombre_producto" class="form-title">Nombre del producto:</label>
      <input
        type="text"
        id="nombre_producto"
        name="nombre_producto"
        placeholder="Nombre del producto"
        class="form-name"
        required />
    </div>
    <div>
      <textarea
        name="descripcion_producto"
        id="descripcion_producto"
        cols="30"
        rows="10"
        placeholder="Descripción del producto"
        wrap="hard"
        class="form-textarea"
        required></textarea>
    </div>
    <div class="form-spacing">
      <label for="sku" class="form-title">SKU:</label>
      <input type="text" id="sku" name="sku" placeholder="SSK111AB001" class="form-sku" required />
      <label for="precio" class="form-title">Precio:</label>
      <input
        type="number"
        id="precio"
        name="precio"
        data-type="currency"
        placeholder="$0.000,00"
        min="0"
        class="form-price"
        required />
      <label for="stock" class="form-title">Stock:</label>
      <input type="number" name="stock" id="stock" placeholder="0 unidades" min="0" class="form-stock" required />
    </div>
    <div class="form-spacing">
      <label for="descuento" class="form-title">Descuento</label>
      <input
        type="text"
        name="descuento"
        id="descuento"
        placeholder="0%"
        min="0"
        max="100"
        step="5"
        class="form-disc"
        required />
      <label for="cuotas" class="form-title">Cuotas:</label>
      <select name="cuotas" id="cuotas" class="form-box1">
        <option value="0">0 cuotas sin interés</option>
        <option value="3">3 cuotas sin interés</option>
        <option value="6">6 cuotas sin interés</option>
        <option value="9">9 cuotas sin interés</option>
        <option value="12">12 cuotas sin interés</option>
        <option value="18">18 cuotas sin interés</option>
        <option value="24">24 cuotas sin interés</option>
      </select>
    </div>
    <div class="form-spacing">
      <label for="imagen_principal" class="form-title_small">Imagen principal:</label>
      <input type="file" name="imagen_principal" id="img1" value="imagen_principal_funko" class="form-files" required />
      <label for="imagen_dorso" class="form-title_small">Imagen del dorso:</label>
      <input type="file" name="imagen_dorso" id="img2" value="imagen_dorso_funko" class="form-files" required />
    </div>
    <div class="form-spacing">
      <input type="submit" value="Agregar Producto" class="form-add" />
      <input type="reset" value="Limpiar" class="form-clear" />
    </div>
  </form>
</main>
<%- include('../partials/footer') %>
